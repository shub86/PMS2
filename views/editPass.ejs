<html>
    <head>
        <title></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>

    <body>
        <%- include('navbar.ejs') %>
        <br>
<h1><%= title %></h1>
       
        <div class="container" >
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
        
                    <div class="shadow from bg-white" style="margin-top: 10%;" >
                        <center><h3>Update Password Details</h3></center>
                        
                        <!-- < ...................................User Resgistration Form.................. -->
                        <form autocomplete="off" action="/editPass" method="post">
                            <div class="form-group">
                                <input type="hidden" value="<%= record1._id %>" name="id" >
                                <label>Select Category</label>
                                <select class="form-control" name="cateName">
                                    <option><%= record1.CategoryName %></option>
                                    <% record.forEach(function(row,index){%>
                                        <option value="<%=row.CategoryName %>"><%=row.CategoryName %></option>
                                  <%  });%>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Enter Project Name</label>
                                <input type="text" name="projectName"  class="form-control" value="<%= record1.ProjectName %>" required="" placeholder="Enter Project Name" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Enter Password Details</label>
                                <textarea id="editor1" class="form-control" name="passDetails" ><%= DcrptPass %></textarea>
                            </div>
                            
                            <center><input type="submit" name="submit" value="Submit" class="btn btn-info" style="width: 250px;"></center>
                </form>
                <br>
                <p> <a href="/passwordDetails"> Viewa all Category</a></p>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        
        </div>
        <script>
            CKEDITOR.replace( 'editor1' );
    </script>
    </body>
</html>