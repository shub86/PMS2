<html>
    <head>
        <%- include('header.ejs') %>
    </head>

    <body>
        <%- include('navbar.ejs') %>
    
<h1 style="padding-top: 2%;"><%= title %></h1>
       
        <div class="container" >
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
        
                    <div class="shadow from bg-white" style="margin-top: 10%;" >
                        <center><h3>Add New Password Details</h3></center>
                        <% if(success!='') {%>
                            <div class="alert alert-success" role="alert">
                                <strong><%= success %></strong>
                              </div>
                            <% }%>
                        <!-- < ...................................User Resgistration Form.................. -->
                        <form autocomplete="off" action="/NewDetails" method="post">
                            <div class="form-group">
                                <label>Select Category</label>
                                <select class="form-control tooltip1" name="cateName" title="Select your password Category">
                                    <option>Select Category</option>
                                    <% record.forEach(function(row){%>
                                        <option><%=row.CategoryName %></option>
                                  <%  });%>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Enter Project Name</label>
                                <input type="text" name="projectName"  class="form-control tooltip1" title="Enter Your Project Name Ex: Hosting acoount password" required="" placeholder="Enter Project Name" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Enter Password Details</label>
                                <textarea  id="editor1" class="form-control tooltip1" title="Enter your Password details Ex: user Name/Email, website url, password" name="passDetails" ></textarea>
                            </div>
                            
                            <center><input type="submit" name="submit" value="Submit" class="btn btn-info" style="width: 250px;"></center>
                </form>
                <br>
                <p> <a href="/passwordDetails"> Viewa all Password details </a></p>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        
        </div>
        <%- include('footer.ejs') %>
        <script>
            CKEDITOR.replace( 'editor1' );
    </script>
    <script>
        $(document).ready(function() {
            $('.tooltip1').tooltipster({
                theme: 'tooltipster-punk',
                animation: 'fade',
                  delay: 200,
                arrow: "speech bubble"
                
            });
        });
    </script>
    </body>
</html>